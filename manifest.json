{
  "manifest_version": 3,
  "name": "Confetti & Fireworks Clicker",
  "version": "1.0.0",
  "description": "Add delightful confetti or fireworks bursts wherever you click.",
  "action": {
    "default_title": "Confetti & Fireworks",
    "default_popup": "popup.html"
  },
  "permissions": ["storage"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["overlay.js", "content.js"],
      "all_frames": true,
      "run_at": "document_idle"
    }
  ]
}