{
  "manifest_version": 3,
  "name": "Magic Clicks",
  "version": "1.0.0",
  "description": "Add delightful animations, wherever you click!",
  "action": {
    "default_title": "Magic Clicks",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "64": "icons/icon64.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": ["storage"],
  "host_permissions": ["<all_urls>"],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "64": "icons/icon64.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["overlay.js", "content.js"],
      "all_frames": true,
      "run_at": "document_idle"
    }
  ]
}